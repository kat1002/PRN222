@model Assignment01_NewsManagementSystem.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<style>

    h1 {
    font-size: 2rem;
    font-weight: bold;
    color: #dc3545; /* Red color for delete warning */
    text-align: center;
    margin-bottom: 20px;
}

h3 {
    font-size: 1.5rem;
    color: #6c757d; /* Gray color */
    text-align: center;
    margin-bottom: 20px;
}

h4 {
    font-size: 1.3rem;
    font-weight: bold;
    color: #343a40;
}

hr {
    border-top: 2px solid #dee2e6;
}

.dl-horizontal dt {
    font-weight: bold;
    color: #495057;
}

.dl-horizontal dd {
    margin-bottom: 10px;
    font-size: 1rem;
    color: #212529;
}

.btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
}

.btn-danger:hover {
    background-color: #c82333;
    border-color: #bd2130;
}

a {
    text-decoration: none;
    color: #007bff;
}

a:hover {
    text-decoration: underline;
}


</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryDesciption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryDesciption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive.HasValue ? (Model.IsActive.Value ? "Active" : "Inactive") : "Unknown")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParentCategory)
        </dt>
        <dd class="col-sm-10">
            @(Model.ParentCategory != null ? Model.ParentCategory.CategoryName : "No Parent")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

