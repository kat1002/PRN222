@model Assignment01_NewsManagementSystem.Models.SystemAccount

@{
    ViewData["Title"] = "Delete";
}

<style>
<style>
    h1 {
        color: #dc3545; /* Bootstrap danger color */
        text-align: center;
        margin-bottom: 20px;
    }

    .text-danger {
        font-weight: bold;
        text-align: center;
    }

    .card {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .row dt {
        font-weight: bold;
        color: #333;
    }

    .row dd {
        color: #555;
    }

    .form-group {
        text-align: center;
    }

    button.btn-danger {
        width: 120px;
    }

    a.btn-secondary {
        width: 120px;
        text-align: center;
    }

    form {
        display: flex;
        justify-content: center;
        gap: 10px;
    }
</style>

</style>
<h1>Delete</h1>

<h3 class="text-danger">Are you sure you want to delete this account?</h3>
<div class="card p-3 shadow-sm bg-white rounded">
    <h4>System Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AccountName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AccountName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AccountEmail)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AccountEmail)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AccountRole)</dt>
        <dd class="col-sm-9">
            @{
                string roleName = Model.AccountRole switch
                {
                    0 => "Admin",
                    1 => "Lecturer",
                    2 => "Staff",
                    _ => "Unknown"
                };
            }
            @roleName
        </dd>
    </dl>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="AccountId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>


