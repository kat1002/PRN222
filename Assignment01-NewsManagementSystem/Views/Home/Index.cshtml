@model IEnumerable<Assignment01_NewsManagementSystem.Models.NewsArticle>

@{
    ViewData["Title"] = "Home";
}

<style>
    .news-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .news-card {
        width: 350px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s;
        background: white;
    }

    .news-card:hover {
        transform: scale(1.03);
    }

    .news-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .news-content {
        padding: 15px;
    }

    .news-title {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .news-meta {
        font-size: 0.9rem;
        color: gray;
        margin-bottom: 10px;
    }

    .news-excerpt {
        font-size: 0.95rem;
        color: #333;
        margin-bottom: 10px;
    }

    .btn-read-more {
        display: block;
        text-align: center;
        padding: 8px;
        font-weight: bold;
        background: #007bff;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        transition: 0.3s;
    }

    .btn-read-more:hover {
        background: #0056b3;
    }
</style>

<div class="container">
    <h2 class="text-center">Latest News</h2>

    <div class="news-container">
        @foreach (var item in Model)
        {
                <div class="news-card">
                    <div class="news-content">
                        <div class="news-title">@item.NewsTitle</div>
                        <div class="news-meta">Published: @item.CreatedDate.ToString()</div>
                        <div class="news-excerpt">
                        @(item.Headline.Length > 100 ? item.Headline.Substring(0, 100) + "..." : item.Headline)
                        </div>
                        <a asp-controller="Home" asp-action="Article" asp-route-id="@item.NewsArticleId" class="btn-read-more">
                            Read More
                        </a>
                    </div>
                </div>
        }
    </div>
</div>
